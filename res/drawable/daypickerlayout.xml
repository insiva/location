<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 连框颜色值 -->
    <item>
        <shape>
            <solid android:color="@color/White" />

            <stroke
                android:width="1dp"
                android:color="#cccccc" />

            <corners 
        android:topRightRadius="5dp"   
        android:bottomRightRadius="5dp"    />
        </shape>
    </item>
    <!-- 主体背景颜色值 -->
    <item android:right="10dp" android:top="1dp" android:bottom="1dp">
        <shape>
            <solid android:color="@color/White" />
            <padding 
                android:top="5dp"
                android:bottom="5dp"
                android:right="15dp"
                android:left="10dp"/>
        </shape>
    </item>

</layer-list>