<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:windowAnimationStyle">@style/default_animation</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="AnimDaypicker" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/daypickerin</item>
        <item name="android:windowExitAnimation">@anim/daypickerout</item>
    </style>

    <style name="AnimStop" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/stopin</item>
        <item name="android:windowExitAnimation">@anim/stopout</item>
    </style>

    <style name="default_animation" mce_bogus="1" parent="@android:style/Animation.Activity">
        <item name="android:activityOpenEnterAnimation">@anim/default_anim_in</item>
        <item name="android:activityOpenExitAnimation">@anim/anim_stay</item>
        <item name="android:activityCloseEnterAnimation">@anim/anim_stay</item>
        <item name="android:activityCloseExitAnimation">@anim/default_anim_out</item>
    </style>

</resources>